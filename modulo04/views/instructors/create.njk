{% extends "layout.njk" %}

{% block content %}
   <form class="card" method="POST" action="/instructors">
      <section class="avatar" style="background: url(https://source.unsplash.com/collection/8353395/500x500) no-repeat center center/ cover"></section>
      <section class="details">
	 <h3>Adicionar Instrutor</h3>
	 <div class="item">
	    <div>Avatar Url</div>
	    <div>
	       <input 
	      type="url" 
	      name='avatar_url'
	      placeholder="http://">
	    </div>
	 </div>

	 <div class="item">
	    <div>Instrutor</div>
	    <div>
	       <input 
	      type="text" 
	      name="name"
	      placeholder="Nome do Instrutor">
	    </div>
	 </div>
	 <div class="item">
	    <div>Data de Nascimento</div>
	    <div>
	       <input 
	      type="date" 
	      name="birth" 
	      placeholder="dd/mm/aaaa"></div>
	 </div>
	 <div class="item">
	    <div>Sexo</div>
	    <div>
	       <span>
		  <input 
	      type="radio" 
	      name="gender"
	      value="M"
	      checked>Masculino</span>
	       <span>
		  <input 
		 type="radio" 
		 name="gender"
		 value="F">Feminio</span>
	    </div>
	 </div>
	 <div class="item">
	    <div>Acompanhamento</div>
	    <div>
	       <input 
	      type="text" 
	      name="services" 
	      placeholder="Separar serviços por vírgula.">
	    </div>
	    <button type="submit">Salvar</button>
   </form>
{% endblock content %}

