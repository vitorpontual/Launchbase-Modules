{% extends 'layout.njk' %}

{% block content %}
   <div class="card">
      <section class="avatar" style='background: url({{teacher.avatar_url}})no-repeat center center / cover '></section>
      <section class="details">
	 <h3>Instrutor</h3>
	 <div class="item">
	    <div>Instrutor</div>
	    <div>{{instructor.name}}</div>
	 </div>
	 <div class="item">
	    <div>Idade</div>
	    <div{{instructor.birth}}</div>
	 </div>
	 <div class="item">
	    <div>Sexo</div>
	    <div>{{"Masculino" if instructor.gender == "M" else "Femino"}}</div>
	 </div>
	 <div class="item">
	    <div>Desde</div>
	    <div>{{instructor.created_at}}</div>
	 </div>
      </section>
   </div>
{% endblock %}
