{% extends '../layout.njk' %}

{% block style %}
   <link rel="stylesheet" href="/product.css">
{%endblock%}

{% block content %}
   <section class="container form">
      <form method="POST" action='/products?_method=PUT'>

	 <div class="header">
	    <h3>Editar Produto {{product.name}}</h3>
	 </div>

	 <div class="fields">
	    {% include 'products/fields.njk' %}
	    
	    <input 
	      type="hidden" 
	      name='id' 
	      value={{product.id}}
	    >
	 </div>

         <button class="button edit" type='submit' >Atualizar</button>
      </form>

      <form id="form-delete"  action="/products?_method=DELETE" action='POST'>
	 <input type="hidden" name='id' value={{product.id}}>
         <button class='button delete' type='submit'>Deletar</button>
      </form>
   </section>

   {% include '../scriptProduct.njk'%}
{%endblock%}
