   {% extends "layout.njk" %}

{% block content %}
   <div class="card">
      <section class="avatar" style="background: url({{member.avatar_url}}) no-repeat center center/ cover"></section>

      <section class="details">

	 <form method="POST" action="/members?_method=PUT">

	    <h3>Editar Member</h3>

	    {% include 'members/fields.njk' %}
	    
	    <input 
		  type="hidden" 
		  name='id' 
		  value={{member.id}}>
	 </form>
	 
	 <form id='form-delete' class="delete" action="/members?_method=DELETE" method='POST'>
	    <input type="hidden" name='id' value={{member.id}}>
	    <button type='submit'>Deletar</button>
	 </form>


      </section>
   </div>

   <script src="/edit.js"></script>


{% endblock content %}


